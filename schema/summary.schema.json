{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://software.psion.info/api/v1/summary.schema.json",
    "title": "Index Summary",
    "description": "High level index statistics.",
    "type": "object",
    "properties": {
        "programs": {
            "type": "object",
            "properties": {
                "epoc16": {"type": "integer"},
                "epoc32": {"type": "integer"}
            },
            "required": ["epoc16", "epoc32"],
            "additionalProperties": false
        },
        "releases": {
            "type": "object",
            "properties": {
                "total": {
                    "type": "object",
                    "properties": {
                        "epoc16": {"type": "integer"},
                        "epoc32": {"type": "integer"}
                    },
                    "required": ["epoc16", "epoc32"],
                    "additionalProperties": false
                },
                "unique": {
                    "type": "object",
                    "properties": {
                        "epoc16": {"type": "integer"},
                        "epoc32": {"type": "integer"}
                    },
                    "required": ["epoc16", "epoc32"],
                    "additionalProperties": false
                }
            },
            "required": ["total", "unique"],
            "additionalProperties": false
        },
        "size": {
            "type": "object",
            "properties": {
                "total": {
                    "type": "object",
                    "properties": {
                        "epoc16": {"type": "integer"},
                        "epoc32": {"type": "integer"}
                    },
                    "required": ["epoc16", "epoc32"],
                    "additionalProperties": false
                },
                "unique": {
                    "type": "object",
                    "properties": {
                        "epoc16": {"type": "integer"},
                        "epoc32": {"type": "integer"}
                    },
                    "required": ["epoc16", "epoc32"],
                    "additionalProperties": false
                }
            },
            "required": ["total", "unique"],
            "additionalProperties": false
        }
    },
    "required": ["programs", "releases", "size"],
    "additionalProperties": false
}
