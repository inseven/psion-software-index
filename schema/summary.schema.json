{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://software.psion.info/api/v1/summary.schema.json",
    "title": "Index Summary",
    "description": "High level index statistics.",
    "type": "object",
    "properties": {
        "installerCount": {
            "type": "integer",
            "example": 11034
        },
        "uidCount": {
            "type": "integer",
            "example": 5757
        },
        "versionCount": {
            "type": "integer",
            "example": 6582
        },
        "shaCount": {
            "type": "integer",
            "example": 8546
        },
        "platforms": {
            "type": "object",
            "properties": {
                "epoc32": {
                    "type": "integer",
                    "example": 6482
                },
                "epoc16": {
                    "type": "integer",
                    "example": 4552
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["installerCount", "uidCount", "versionCount", "shaCount"],
    "additionalProperties": false
}
