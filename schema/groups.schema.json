{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://software.psion.info/api/v1/groups.schema.json",
    "title": "Program Groups",
    "description": "Top-level grouping for individual programs.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {"type": "string"},
            "name": {"type": "string"},
            "icon": {
                "type": "object",
                "properties": {
                    "path": {"type": "string"},
                    "width": {
                        "type": "number",
                        "example": 640
                    },
                    "height": {
                        "type": "number",
                        "example": 480
                    },
                    "bpp": {"type": "number"}
                },
                "required": ["path", "width", "height", "bpp"],
                "additionalProperties": false
            },
            "platforms": {
                "type": "array",
                "items": {"enum": ["epoc16", "epoc32"]}
            }
        },
        "required": ["id", "name", "platforms"],
        "additionalProperties": false
    }
}
